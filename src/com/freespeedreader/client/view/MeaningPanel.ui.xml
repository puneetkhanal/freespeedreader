<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
		background-color: #FFFFFF;
		}

		.message {
		padding: 10px;
		font-size: 11pt;
		}

		.buttonPanel {
		padding: 10px 20px;
		margin: 5px;
		}
		.textArea{
		height: 150px;
		width: 300px;
		font-weight: bold;
		font-size:15px;
		font-name:
		sans-serif;
		}


	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<g:FlowPanel>
		    <g:ScrollPanel height="300px">
			<g:HTML ui:field="messageLabel" wordWrap="true" styleName="{style.message}"></g:HTML>
			</g:ScrollPanel>
			<g:HTMLPanel>
				<center>
					<g:Button ui:field="close">close</g:Button>
				</center>
			</g:HTMLPanel>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 