<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:l="urn:import:com.freespeedreader.client.views.components.layout">

	<ui:style>
		.center {
			width: 1000px;
			min-height: 400px;
			margin: 0px auto;
			padding: 10px 0px;
			overflow: auto;
		}
		
		.bc td {
			padding: 2px;
		}
		
		.container {
			overflow: auto;
		}
	</ui:style>
	<g:ScrollPanel ui:field="scrollMain">
		<g:HTMLPanel ui:field="outer" styleName="{style.container}">
			<l:Header ui:field="header"></l:Header>
			<g:SimplePanel ui:field="centerContainer" styleName="{style.center}" />
			<l:Footer></l:Footer>
		</g:HTMLPanel>
	</g:ScrollPanel>

</ui:UiBinder>